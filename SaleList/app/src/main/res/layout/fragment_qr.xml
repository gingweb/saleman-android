<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.akkaratanapat.altear.vrp_onboard.Fragment.QRFragment">

        <RelativeLayout
            android:id="@+id/contentFrame"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp">

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:theme="@style/LinearProgress"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/editTextQR"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:hint="  รหัสงาน : "
            android:includeFontPadding="true"
            android:maxLines="1"
            android:textSize="20sp"
            app:fl_fieldStyle="fl_box"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <com.cengalabs.flatui.views.FlatButton
                    android:id="@+id/buttonQROk"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="@string/OK"
                    android:textSize="25sp"
                    android:layout_margin="15dp"
                    app:fl_blockButtonEffectHeight="3dp"
                    app:fl_textAppearance="fl_light" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <com.cengalabs.flatui.views.FlatButton
                    android:id="@+id/buttonQRCancel"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|start"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="@string/Cancel"
                    android:textSize="25sp"
                    android:layout_margin="15dp"
                    app:fl_blockButtonEffectHeight="3dp"
                    app:fl_textAppearance="fl_dark" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
